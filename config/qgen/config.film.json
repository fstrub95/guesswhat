{
  "name" : "VIS seq2seq model",

  "model": {

    "image":
    {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "mean"
      }

    },

    "dialogue":
    {
      "word_embedding_dim" : 300,
      "share_decoder_emb": false,
      "glove" : false,
      "rnn_state_size": 1500,
      "bidirectional" : true,
      "max_pool" : false
    },

    "fusion": {
        "apply_fusion" : true,
        "mode" : "vis",
        "projection_size": 1024,
        "output_size": 512
    },

    "decoder": {
      "num_units": 512
    }

  },

  "optimizer": {
    "no_epoch": 15,
    "learning_rate": 1e-4,
    "batch_size": 32,
    "clip_val": 5
  },

  "seed": -1

}
