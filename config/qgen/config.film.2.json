{
  "name" : "FiLM",

  "model": {


    "image":
    {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "none"
      },

      "film_block": {
        "stem": {
          "spatial_location": true,
          "conv_out": 256,
          "conv_kernel": [3,3]
        },

        "resblock": {
          "feature_size" : [128, 128, 128, 128],
          "spatial_location": true,
          "kernel1": [1,1],
          "kernel2": [3,3]
        },

        "head": {
          "spatial_location": true,
          "conv_out": 1024,
          "conv_kernel": [1,1],

          "attention": {
            "mode": "mean",
            "no_attention_mlp": 256,
            "no_glimpses": 1
          }
        }
      }

    },

    "dialogue":
    {
      "word_embedding_dim" : 300,
      "share_decoder_emb": false,
      "glove" : false,
      "rnn_state_size": 1500,
      "bidirectional" : true,
      "layer_norm" : false,
      "max_pool" : false
    },

    "fusion": {
        "apply_fusion" : false,
        "mode" : "vis",
        "projection_size": 1024,
        "output_size": 512
    }
  },

  "optimizer": {
    "no_epoch": 15,
    "learning_rate": 1e-4,
    "batch_size": 48,
    "clip_val": 5,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling"]
  },

  "seed": -1

}
