{
  "name" : "Baseline: +object +question -attention",

  "model": {

    "type" : "film",
    "split_question" : true,

    "inputs": {
      "crop": true,
      "image": true
    },

    "question": {
      "word_embedding_dim": 200,
      "rnn_state_size": 800,
      "glove" : false,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "category": {
      "n_categories": 90,
      "embedding_dim": 200
    },

    "spatial": {
      "no_mlp_units": 30
    },

    "classifier":
    {
      "inputs" :
      {
       "question": true,
       "category": true,
       "spatial": true
      },

      "no_mlp_units": 512
    },

    "image":
    {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "mean"
      }

    },

    "crop":
    {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,
      "scale" : 1.1,

      "attention" : {
        "mode": "mean"
      }

    }

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 3e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling"]
  },

  "dropout_keep_prob" : 0.5,
  "status": ["success"],

  "seed": -1
}